= form_for @boat do |f|
  - if @boat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@boat.errors.count, "error")} prohibited this boat from being saved:"
      %ul
        - @boat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :period
    = f.number_field :period
  .field
    = f.label :start_number
    = f.number_field :start_number
  .actions
    = f.submit 'Save'
